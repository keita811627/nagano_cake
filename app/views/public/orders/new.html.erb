<h1>注文情報入力画面</h1>
<%= form_with model: @order, url: public_orders_confirm_path, local:true do |f| %>
 <div>
   <h3>支払い方法</h3>
  <%= f.radio_button :payment_method, :credit_card %>
  <%= f.label :payment_method, "クレジットカード" %>
  <%= f.radio_button :payment_method, :transfer %>
  <%= f.label :payment_method, "銀行振込" %>
 </div>
 <div>
   <h3>お届け先</h3>
   <%= f.radio_button :address_option, 0 %>
   <%= f.label :address, "ご自身の住所" %>
   <p>
   <%= @user.address %>
   </p>
   <%= f.radio_button :address_option, 1 %>
   <%= f.label :address, "登録済住所から選択" %>
   <p>
   <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address) %>
   </p>
   <%= f.radio_button :address_option, 2 %>
   <%= f.label :address, "新しいお届け先" %>
   <p>郵便番号：
   <%= f.text_field :postal_code %>
   </p>
   <p>住所：
   <%= f.text_field :address %>
   </p>
   <p>宛名：
   <%= f.text_field :name %>
   </p>

</div>
<%= f.submit "確認画面へ進む" %>

<% end %>
<p>Find me in app/views/orders/new.html.erb</p>
