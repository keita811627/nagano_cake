<h1>注文履歴一覧</h1>
<div>
    <table>
        <thead>
            <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>ステータス</th>
                <th>注文詳細</th>
                <th colspan"6"></th>
            </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
            <tr>
                <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= order.address %></td>
                <td>
                    <% order.order_datails.each do |order_datail| %>
                    <%= order_datail.item.name %>
                    <% end %>
                </td>
                <td><%= order.total_payment %></td>
                <td><%= order.status_i18n %></td>
                <td><%= link_to "表示する", public_order_path(order.id) %></td>
            </tr>
        </tbody>
        <% end %>
    </table>
</div>
