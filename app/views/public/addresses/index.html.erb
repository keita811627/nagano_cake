<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: public_addresses_path, local:true do |f| %>
<div>郵便番号(ハイフンなし)
  <%= f.text_field :postal_code %>
</div>
<div>住所
  <%= f.text_field :address %>
</div>
<div>宛名
  <%= f.text_field :name %>
</div>
<div>
  <%= f.submit "登録" %>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_public_address_path(address.id) %><%= link_to "削除する", public_address_path(address.id), method: :delete, "date-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<p>Find me in app/views/addresses/index.html.erb</p>
