<h1>会員情報編集</h1>
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <% @customer.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@customer, url: public_customers_path, local:true do |f| %>

  <div class="field">
    <%= f.label :"姓" %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.label :"名" %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"セイ" %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.label :"メイ" %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :"住所" %>
    <%= f.text_field :address, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :"電話番号(ハイフンなし)" %>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div>
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
<%= link_to "退会する", public_unsubscribe_path %>
