<h1>管理者　商品新規登録画面</h1>
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <% @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @item, url: admin_items_path, local:true do |f| %>
  <h4>商品画像
    <%= f.attachment_field :image %>
  </h4>
  <h4>商品名
    <%= f.text_field :name %>
  </h4>
  <h4>商品詳細
    <%= f.text_area :introduction %>
  </h4>
  <h4>ジャンル
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </h4>
  <h4>税抜き価格
    <%= f.text_field :price %>
  </h4>
  <h4>販売ステータス
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "販売中", {value: :true} %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "販売停止中", {value: :true} %>
  </h4>
  <p>
    <%= f.submit '新規登録'%>
  </p>
<% end %>
<p>Find me in app/views/admin/items/new.html.erb</p>
